<script>
	if (localStorage.getItem('1') == 'false'){
		var buttonText = 'Add to Favourites';
		createButton();
	}
	else if (localStorage.getItem('1') == 'true'){
		var buttonText = 'Remove from Favourites';
		createButton();
	}
	function createButton(){
		var button = document.createElement('button');
	    button.textContent = buttonText;
	    button.setAttribute('id', 'fav');
	    button.setAttribute('type', 'button');
	    document.getElementById('stuff').appendChild(button);
	    button.addEventListener("click", favourite);
	}
	function favourite(){
		if (localStorage.getItem('1') == 'false'){
			document.getElementById('fav').innerHTML = 'Remove from Favourites';
			alert('Added to Favourites');
			localStorage.setItem('1', 'true');
		}
		else if (localStorage.getItem('1') == 'true'){
			document.getElementById('fav').innerHTML = 'Add to Favourites';
			alert('Removed from Favourites');
			localStorage.setItem('1', 'false');
		}
	} 
</script>
